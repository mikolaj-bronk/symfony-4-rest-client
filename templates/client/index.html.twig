{% extends 'base.html.twig' %}

{% block title %}Hel {% endblock %}
{% block body %}
    {% for label, messages in app.flashes(['warning', 'error', 'success']) %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <table class="table table-bordered">
        <thead>
             <tr>
                <th>id</th>
                <th>name</th>
                <th>amount</th>
                <th>delete</th>
                <th>update</th>
            </tr>
        </thead>
    {% for item in items %}
        <tr>
            <td>
                {{ item.id }}
            <td>
                {{ item.name }}
            </td>
            <td>
                {{ item.amount }}
            </td>
            <td>
                <a href="{{ path('item_delete', {'id': item.id }) }}" class="btn btn-danger">Delete</a>
            </td>
            <td>
                <a href="{{ path('item_update', {'id': item.id }) }}" class="btn btn-warning">Update</a>
            </td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}
